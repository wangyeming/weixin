<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :评论 %><br>
    <%= f.text_field :commenter , class: "form-control", rows: '1' %>
  </p>
  <p>
    <%= f.label :评论补充 %><br>
    <%= f.text_area :body, class: "form-control", rows: '2' %>
  </p>
  <p>
    <%= f.submit class: "btn btn-primary"%>
  </p>
<% end %>
